<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar_root_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_84dp"
        android:layout_marginTop="@dimen/bj_25dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_12dp"
            android:layout_weight="1"
            android:text="@string/head_portrait"
            android:textColor="@color/grey_333333"
            android:textSize="@dimen/wz_15sp" />

        <!-- <com.makeramen.roundedimageview.RoundedImageView
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/head"
             android:layout_width="50dp"
             android:layout_height="@dimen/bj_50dp"
             android:layout_marginRight="@dimen/bj_15dp"
             android:scaleType="centerCrop"
             android:src="@drawable/mine_head"
             app:riv_border_color="@color/white"
             app:riv_border_width="2dp"
             app:riv_corner_radius="8dp" />-->

        <com.smg.art.view.RoundImageView
            android:id="@+id/civMyPicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/bj_15dp"
            android:background="@mipmap/head" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_39dp"
        android:layout_marginTop="@dimen/bj_10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_weight="1"
            android:text="昵称"
            android:textColor="@color/grey_333333"
            android:textSize="@dimen/wz_15sp" />

        <TextView
            android:id="@+id/nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bj_14dp"
            android:textColor="@color/grey_e6000000"
            android:textSize="@dimen/wz_15sp" />

        <ImageView
            android:layout_width="@dimen/bj_9dp"
            android:layout_height="@dimen/bj_15dp"
            android:layout_marginRight="@dimen/bj_15dp"
            android:background="@drawable/arrow_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_39dp"
        android:layout_marginTop="@dimen/bj_10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_weight="1"
            android:text="手机号"
            android:textColor="@color/grey_333333"
            android:textSize="@dimen/wz_15sp" />

        <TextView
            android:id="@+id/phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bj_14dp"
            android:textColor="@color/grey_e6000000"
            android:textSize="@dimen/wz_15sp" />

        <ImageView
            android:layout_width="@dimen/bj_9dp"
            android:layout_height="@dimen/bj_15dp"
            android:layout_marginRight="@dimen/bj_15dp"
            android:background="@drawable/arrow_gray" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_39dp"
        android:layout_marginTop="@dimen/bj_10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_weight="1"
            android:text="登录密码"
            android:textColor="@color/grey_333333"
            android:textSize="@dimen/wz_15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bj_14dp"
            android:inputType="textPassword"
            android:text="23423423"
            android:textColor="@color/grey_e6000000"
            android:textSize="@dimen/wz_15sp" />

        <ImageView
            android:layout_width="@dimen/bj_9dp"
            android:layout_height="@dimen/bj_15dp"
            android:layout_marginRight="@dimen/bj_15dp"
            android:background="@drawable/arrow_gray" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/pay_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_39dp"
        android:layout_marginTop="@dimen/bj_10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_weight="1"
            android:text="交易密码"
            android:textColor="@color/grey_333333"
            android:textSize="@dimen/wz_15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bj_14dp"
            android:inputType="textPassword"
            android:text="23423423"
            android:textColor="@color/grey_e6000000"
            android:textSize="@dimen/wz_15sp" />

        <ImageView
            android:layout_width="@dimen/bj_9dp"
            android:layout_height="@dimen/bj_15dp"
            android:layout_marginRight="@dimen/bj_15dp"
            android:background="@drawable/arrow_gray" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exit"
            android:layout_width="290dp"
            android:layout_height="46dp"
            android:background="@drawable/red_bg"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/wz_15sp" />
    </LinearLayout>

</LinearLayout>