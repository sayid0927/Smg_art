<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/actionbar_root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:background="@drawable/mine_bg" />

        <LinearLayout
            android:id="@+id/l_price"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:layout_marginTop="@dimen/bj_31dp"
            android:background="@drawable/shape_wihte_model"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_22dp"
                android:layout_marginTop="@dimen/bj_19dp"
                android:text="可用余额"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/wz_13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_23dp"
                android:layout_marginRight="@dimen/bj_23dp"
                android:layout_marginTop="@dimen/bj_15dp"
                android:text="¥ 2854488555"
                android:textColor="@color/red_b20002" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_1dp"
                android:layout_marginLeft="@dimen/bj_3dp"
                android:layout_marginRight="@dimen/bj_3dp"
                android:layout_marginTop="@dimen/bj_20dp"
                android:background="@color/grey_e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/withdraw"
                    android:layout_width="@dimen/bj_60dp"
                    android:layout_height="@dimen/bj_20dp"
                    android:layout_marginRight="@dimen/bj_20dp"
                    android:background="@drawable/shape_red_text"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="@color/white"
                    android:textSize="@dimen/wz_13sp" />

                <TextView
                    android:id="@+id/rcharge"
                    android:layout_width="@dimen/bj_60dp"
                    android:layout_height="@dimen/bj_20dp"
                    android:layout_marginRight="@dimen/bj_18dp"
                    android:background="@drawable/shape_red"
                    android:gravity="center"
                    android:text="充值"
                    android:textColor="@color/white"
                    android:textSize="@dimen/wz_13sp" />

            </LinearLayout>


        </LinearLayout>

        <com.smg.art.view.TabPageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/l_price"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:layout_marginTop="@dimen/bj_10dp"
            android:background="@drawable/shape_top_10" />

        <com.smg.art.view.ViewPagerSlide
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/indicator"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/shape_down_10" />

    </RelativeLayout>

</LinearLayout>