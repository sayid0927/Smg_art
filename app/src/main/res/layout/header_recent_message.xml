<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flRoot"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="5px"
        android:paddingRight="25px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/sy_rlHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px">
                <!--头像-->
                <com.smg.art.view.RoundImageView
                    android:id="@+id/sy_ivHeader"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/bj_15dp"
                    android:background="@drawable/sey_message" />

            </com.zhy.autolayout.AutoRelativeLayout>
            <!--未读消息数-->
            <TextView
                android:id="@+id/sy_tvCount"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_alignTop="@id/rlHeader"
                android:layout_marginLeft="-30px"
                android:layout_marginTop="-10px"
                android:layout_toRightOf="@id/rlHeader"
                android:background="@drawable/shape_red_dot"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="22px"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="20px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <!--昵称或群名-->
                <TextView
                    android:id="@+id/sy_tvDisplayName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="系统消息"
                    android:textColor="#333333"
                    android:textSize="@dimen/wz_16sp" />

                <TextView
                    android:id="@+id/sy_tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/gray3"
                    android:textSize="25px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <!--消息-->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sy_tvDraft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/draft"
                    android:textColor="@color/red7"
                    android:textSize="28px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/sy_tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/gray1"
                    android:textSize="28px" />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginRight="@dimen/bj_15dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:background="#e5e5e5"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5px"
        android:paddingRight="25px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px">
                <!--头像-->
                <com.smg.art.view.RoundImageView
                    android:id="@+id/ivHeader"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/bj_15dp"
                    android:background="@drawable/ord" />

            </com.zhy.autolayout.AutoRelativeLayout>
            <!--未读消息数-->
            <TextView
                android:id="@+id/tvCount"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_alignTop="@id/rlHeader"
                android:layout_marginLeft="-30px"
                android:layout_marginTop="-10px"
                android:layout_toRightOf="@id/rlHeader"
                android:background="@drawable/shape_red_dot"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="22px"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="20px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <!--昵称或群名-->
                <TextView
                    android:id="@+id/tvDisplayName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="订单通知"
                    android:textColor="#333333"
                    android:textSize="@dimen/wz_16sp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/gray3"
                    android:textSize="25px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <!--消息-->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDraft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/draft"
                    android:textColor="@color/red7"
                    android:textSize="28px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/gray1"
                    android:textSize="28px" />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>