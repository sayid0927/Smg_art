<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bj_50dp"
    android:background="@color/colorPrimaryDark">


    <RelativeLayout
        android:id="@+id/ll_back"
        android:layout_width="@dimen/bj_35dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="?android:selectableItemBackground">

        <ImageView
            android:id="@+id/ivToolbarNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:src="@drawable/arrow_back" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/bj_30dp"
        android:layout_toRightOf="@+id/ll_back"
        android:background="@drawable/searchbar_bg">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_30dp"
            android:gravity="center|left"
            android:hint="@string/search_hint"
            android:paddingLeft="@dimen/bj_9dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/wz_13sp"
            android:visibility="gone" />


        <EditText
            android:id="@+id/et_SearchContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_30dp"
            android:background="@null"
            android:drawablePadding="10dp"
            android:hint="@string/search_hint"
            android:maxLines="1"
            android:paddingLeft="@dimen/bj_9dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/wz_13sp" />


        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/bj_8dp"
            android:src="@drawable/search_home" />

    </RelativeLayout>

</RelativeLayout>