<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/rc_item_conversation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_vertical">

    <FrameLayout
        android:id="@id/rc_item1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp">

        <!--头像-->
        <com.smg.art.view.RoundImageView
            android:id="@+id/ivHeader"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@mipmap/head" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:paddingTop="4dp">

            <!--未读消息数-->
            <TextView
                android:id="@+id/tvCount"
                android:layout_width="@dimen/bj_20dp"
                android:layout_height="@dimen/bj_20dp"
                android:layout_alignTop="@id/ivHeader"
                android:layout_toRightOf="@id/ivHeader"
                android:background="@drawable/shape_red_dot"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="22px"
                android:visibility="gone"/>
        </FrameLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/rc_item2"
        android:layout_toRightOf="@id/rc_item1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/wz_16sp"
                android:textColor="#333333"
                android:text="" />

            <TextView
                android:gravity="right"
                android:layout_weight="1"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="@dimen/wz_12sp"
                android:text="" />



        </LinearLayout>


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_5dp"
            android:textSize="@dimen/wz_12sp"
            android:textColor="#666666"
            android:text=""/>

    </LinearLayout>


    <FrameLayout
        android:id="@id/rc_item2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent">

        <io.rong.imkit.widget.AsyncImageView
            android:id="@id/rc_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:RCCornerRadius="3dp"
            app:RCDefDrawable="@drawable/rc_default_portrait" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:paddingTop="4dp">

            <ImageView
                android:id="@+id/rc_unread_message_icon_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/rc_unread_message_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </FrameLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:layout_below="@+id/rc_item2"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginRight="@dimen/bj_15dp"
        android:background="#e5e5e5" />


</RelativeLayout>