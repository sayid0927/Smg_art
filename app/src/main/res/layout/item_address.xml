<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/bj_15dp"
            android:layout_marginTop="@dimen/bj_15dp">


            <TextView
                android:id="@+id/tv_nameN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textColor="#282828"
                android:textSize="@dimen/wz_15sp" />


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_nameN"
                android:text="刘小姐"
                android:textColor="#282828"
                android:textSize="@dimen/wz_15sp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/bj_15dp"
                android:text="13928024454"
                android:textColor="#282828"
                android:textSize="@dimen/wz_15sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginBottom="@dimen/bj_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_15dp"
            android:layout_marginTop="@dimen/bj_30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_def"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[默认]"
                    android:textColor="#e70113"
                    android:textSize="@dimen/wz_15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_2dp"
                    android:layout_marginRight="@dimen/bj_8dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#282828"
                    android:textSize="@dimen/wz_15sp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_address_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/bj_10dp"
                android:src="@drawable/address_edit" />


            <ImageView
                android:id="@+id/iv_address_dele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/bj_10dp"
                android:src="@drawable/address_dele" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
