<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/login_head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_150dp"
                android:background="@drawable/login_head" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_head"
                android:layout_marginTop="@dimen/bj_52dp"
                android:paddingLeft="46dp"
                android:text="手机号"
                android:textColor="@color/grey_e6000000"
                android:textSize="@dimen/wz_20sp" />


            <LinearLayout
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@+id/phone"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="46dp"
                android:paddingRight="42dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_context"
                        style="@style/BigBlackTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入手机号"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:singleLine="true"
                        android:textColor="@color/grey_e6000000"
                        android:textColorHint="@color/grey_66000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_del"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerInside"
                    android:src="@drawable/delete" />

            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/input_phone"
                android:layout_marginLeft="@dimen/bj_46dp"
                android:layout_marginRight="@dimen/bj_42dp"
                android:background="@color/grey_e5e5e5" />

            <TextView
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_marginTop="@dimen/bj_25dp"
                android:paddingLeft="46dp"
                android:text="密    码"
                android:textColor="@color/grey_e6000000"
                android:textSize="@dimen/wz_20sp" />

            <LinearLayout
                android:id="@+id/input_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pwd"
                android:layout_marginTop="@dimen/bj_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/bj_46dp"
                android:paddingRight="42dp">

                <EditText
                    android:id="@+id/etPayPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/bj_10dp"
                    android:paddingTop="@dimen/bj_10dp"
                    android:textColor="@color/grey_e6000000"
                    android:textColorHint="@color/grey_66000000"
                    android:textSize="13sp" />


                <LinearLayout
                    android:id="@+id/pwdImg"
                    android:layout_width="@dimen/bj_30dp"
                    android:layout_height="@dimen/bj_30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/togglePwd"
                        android:layout_width="15dp"
                        android:layout_height="11dp"
                        android:background="@drawable/toggle_pwd_selector"
                        android:scaleType="centerInside"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/input_pwd"
                android:layout_marginLeft="@dimen/bj_46dp"
                android:layout_marginRight="@dimen/bj_42dp"
                android:background="@color/grey_e5e5e5" />

            <LinearLayout
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/comfirm"
                    android:layout_width="290dp"
                    android:layout_height="44dp"
                    android:background="@drawable/red_bg"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login"
                android:layout_marginTop="@dimen/bj_28dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即注册"
                    android:textColor="@color/yellow_ff9a00"
                    android:textSize="@dimen/wz_13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_17dp"
                    android:layout_marginRight="17dp"
                    android:text="|" />


                <TextView
                    android:id="@+id/foget_passwords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"
                    android:textColor="@color/grey_66000000"
                    android:textSize="@dimen/wz_13sp" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>