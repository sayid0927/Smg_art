<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar_root_layout" />

    <LinearLayout
        android:id="@+id/courier_info"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="@dimen/bj_10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_14dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/courier_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/wz_12sp" />

                <TextView
                    android:id="@+id/courier_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_11dp"
                    android:layout_marginRight="@dimen/bj_38dp"
                    android:textColor="@color/black_000000"
                    android:textSize="@dimen/wz_11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/courier_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/bj_33dp"
                android:layout_marginTop="@dimen/bj_14dp"
                android:maxLines="2"
                android:textColor="@color/black_595959"
                android:textSize="@dimen/wz_12sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_info"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/bj_8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="@dimen/bj_10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/logistic_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流状态"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/wz_13sp" />

                <TextView
                    android:id="@+id/logistic_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_8dp"
                    android:textColor="@color/green_18c810"
                    android:textSize="@dimen/wz_13sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expressage_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bj_9dp"
                    android:text="承运来源"
                    android:textColor="@color/black_999999"
                    android:textSize="@dimen/wz_12sp" />

                <TextView
                    android:id="@+id/expressage_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_8dp"
                    android:layout_marginTop="@dimen/bj_9dp"
                    android:textColor="@color/black_969696"
                    android:textSize="@dimen/wz_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bj_9dp"
                    android:text="订单运号"
                    android:textColor="@color/black_999999"
                    android:textSize="@dimen/wz_12sp" />

                <TextView
                    android:id="@+id/order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_8dp"
                    android:layout_marginTop="@dimen/bj_9dp"
                    android:textColor="@color/black_999999"
                    android:textSize="@dimen/wz_12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bj_10dp"
        android:background="@color/white"
        android:divider="@null"
        android:scrollbars="none" />

</LinearLayout>