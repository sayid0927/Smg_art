<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/auction"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/bj_10dp"
        android:paddingTop="@dimen/bj_10dp">

        <RelativeLayout
            android:layout_width="@dimen/bj_90dp"
            android:layout_height="@dimen/bj_90dp">

            <ImageView
                android:id="@+id/shop_iv"
                android:layout_width="@dimen/bj_90dp"
                android:layout_height="@dimen/bj_90dp"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/shop_status"
                android:layout_width="@dimen/bj_42dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:layout_marginTop="@dimen/bj_4dp"
                android:background="@drawable/have_pat_brown"
                android:gravity="center"
                android:text="拍卖中"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_10sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_9dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="玉佛牌石器吊坠"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/wz_15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距拍卖结束:"
                    android:textColor="@color/grey_e6000000"
                    android:textSize="@dimen/wz_13sp" />

                <LinearLayout
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bj_5dp"
                        android:background="@drawable/text_time_bg"
                        android:padding="@dimen/bj_5dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="13sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/bj_5dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_time_bg"
                        android:padding="@dimen/bj_5dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="13sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/bj_5dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_time_bg"
                        android:padding="@dimen/bj_5dp"
                        android:text="00"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/bj_15dp"
                        android:layout_height="@dimen/bj_15dp"
                        android:layout_marginBottom="@dimen/bj_5dp"
                        android:layout_marginLeft="@dimen/bj_5dp"
                        android:background="@drawable/hammer" />
                </LinearLayout>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_3dp"
                    android:layout_marginRight="@dimen/bj_5dp"
                    android:layout_weight="1"
                    android:text="199"
                    android:textColor="@color/red_b20002"
                    android:textSize="@dimen/wz_20sp" />

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="@dimen/bj_85dp"
                    android:layout_height="@dimen/bj_20dp"
                    android:layout_marginRight="@dimen/bj_10dp"
                    android:background="@drawable/shape_red"
                    android:gravity="center"
                    android:text="查看详情"
                    android:textColor="@color/white"
                    android:textSize="@dimen/wz_13sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overdue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_9dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/overdue_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="玉佛牌石器吊坠"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/wz_15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/overdue_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="逾期支付:"
                    android:textColor="@color/grey_e6000000"
                    android:textSize="@dimen/wz_13sp" />


                <TextView
                    android:id="@+id/overdue_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/bj_5dp"
                    android:layout_marginTop="@dimen/bj_3dp"
                    android:layout_weight="1"
                    android:text="该商品已逾期未支付"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/wz_12sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bj_5dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/overdue_btn"
                        android:layout_width="@dimen/bj_85dp"
                        android:layout_height="@dimen/bj_20dp"
                        android:layout_marginRight="@dimen/bj_10dp"
                        android:background="@drawable/shape_red"
                        android:gravity="center"
                        android:text="逾期未支付"
                        android:textColor="@color/white"
                        android:textSize="@dimen/wz_13sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

