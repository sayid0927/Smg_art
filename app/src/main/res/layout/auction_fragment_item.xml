<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/auction"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/bj_10dp"
        android:paddingTop="@dimen/bj_10dp">

        <RelativeLayout
            android:layout_width="@dimen/bj_90dp"
            android:layout_height="@dimen/bj_90dp">

            <ImageView
                android:id="@+id/shop_iv"
                android:layout_width="@dimen/bj_90dp"
                android:layout_height="@dimen/bj_90dp"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/shop_status"
                android:layout_width="@dimen/bj_42dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:layout_marginTop="@dimen/bj_4dp"
                android:background="@drawable/shape_re_red"
                android:gravity="center"
                android:text="拍卖中"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_10sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_9dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="玉佛牌石器吊坠"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/wz_15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_5dp"
                android:text="结拍时间 2018-12-12"
                android:textColor="@color/grey_e6333333"
                android:textSize="@dimen/wz_13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="¥"
                     android:textColor="@color/red_b20002"
                     android:textSize="@dimen/wz_9sp" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/bj_15dp"
                        android:layout_height="@dimen/bj_15dp"
                        android:layout_marginBottom="@dimen/bj_5dp"
                        android:layout_marginLeft="@dimen/bj_5dp"
                        android:background="@drawable/hammer" />
                </LinearLayout>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_3dp"
                    android:layout_weight="1"
                    android:text="199"
                    android:textColor="@color/red_b20002"
                    android:textSize="@dimen/wz_20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                >
                <TextView
                    android:id="@+id/complaint_btn"
                    android:layout_width="@dimen/bj_75dp"
                    android:layout_height="@dimen/bj_20dp"
                    android:layout_marginRight="@dimen/bj_10dp"
                    android:background="@drawable/shape_faint_yellow"
                    android:gravity="center"
                    android:text="发起投诉"
                    android:textColor="@color/white"
                    android:textSize="@dimen/wz_13sp"
                    android:visibility="gone"
                   />

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="@dimen/bj_75dp"
                    android:layout_height="@dimen/bj_20dp"
                    android:layout_marginRight="@dimen/bj_10dp"
                    android:background="@drawable/shape_red"
                    android:gravity="center"
                    android:text="查看详情"
                    android:textColor="@color/white"
                    android:textSize="@dimen/wz_13sp"
                    android:visibility="gone"
                   />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/complaint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_72dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/complaint_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_12dp"
            android:layout_marginRight="@dimen/bj_12dp"
            android:singleLine="true"
            android:text="翡翠鱼水电费水电费"
            android:textColor="@color/grey_e6000000"
            android:textSize="@dimen/wz_15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_12dp"
            android:layout_marginTop="@dimen/bj_15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投诉原因: "
                android:textColor="@color/black_333333"
                android:textSize="@dimen/wz_15sp" />

            <TextView
                android:id="@+id/complaint_cause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/bj_12dp"
                android:layout_weight="1"
                android:text="商品破损"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/wz_15sp" />

            <TextView
                android:id="@+id/complaint_detail"
                android:layout_width="@dimen/bj_75dp"
                android:layout_height="@dimen/bj_20dp"
                android:layout_marginRight="@dimen/bj_10dp"
                android:background="@drawable/shape_red"
                android:gravity="center"
                android:text="查看详情"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_13sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>