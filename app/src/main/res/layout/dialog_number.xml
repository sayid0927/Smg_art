<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="请输入交易密码"
                android:textColor="@color/black"
                android:textSize="@dimen/wz_18sp" />

            <ImageView
                android:id="@+id/iv_dele"
                android:layout_width="@dimen/bj_25dp"
                android:layout_height="@dimen/bj_25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/bj_10dp"
                android:background="@drawable/delete" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:background="@null"
                android:id="@+id/tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/bj_10dp"
                android:text=""
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:textSize="@dimen/wz_20sp" />

            <Button
                android:id="@+id/bt_auction"
                android:layout_width="@dimen/bj_150dp"
                android:layout_height="@dimen/bj_40dp"
                android:layout_below="@+id/tv_pwd"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/bj_10dp"
                android:background="@drawable/text_red_bg"
                android:gravity="center"
                android:text="确定"
                android:layout_marginBottom="@dimen/bj_30dp"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/bj_5dp"
            android:layout_height="@dimen/bj_5dp"
            android:background="@color/color_EDEDED"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.smg.art.view.XNumberKeyboardView
                android:id="@+id/view_keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#b0b0b0"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:keyBackground="@drawable/selector_key_background"
                android:keyTextColor="#000000"
                android:shadowColor="@android:color/transparent"
                android:shadowRadius="0"
                app:xnkv_deleteBackgroundColor="#d2d2d2"
                app:xnkv_deleteDrawable="@drawable/keyboard_backspace"
                app:xnkv_deleteWidth="22dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>