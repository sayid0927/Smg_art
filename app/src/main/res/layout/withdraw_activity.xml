<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/actionbar_root_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="@dimen/bj_28dp"
        android:layout_marginTop="@dimen/bj_21dp"
        android:background="@drawable/shape_wihte_model"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/add_bank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_53dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+添加银行卡"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/bj_15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bank_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/bank_icon"
                android:layout_width="@dimen/bj_25dp"
                android:layout_height="@dimen/bj_25dp"
                android:layout_marginLeft="@dimen/bj_13dp"
                android:background="@mipmap/bankdefaults" />

            <TextView
                android:id="@+id/bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:layout_weight="1"
                android:text="招商银行"
                android:textColor="@color/black_000000" />

            <TextView
                android:id="@+id/bank_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/bj_25dp"
                android:text="(9899)"
                android:textColor="@color/black_000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/bj_18dp"
                android:background="@drawable/arrow_gray" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_marginRight="@dimen/bj_13dp"
            android:background="@color/grey_e7e7e7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_marginTop="@dimen/bj_18dp"
            android:text="提现金额"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/wz_15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_30dp"
            android:layout_marginRight="@dimen/bj_4dp"
            android:layout_marginTop="@dimen/bj_28dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/bj_10dp"
            android:paddingRight="@dimen/bj_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bj_40dp"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:text="@string/cart_yuan_dol"
                android:textColor="@color/black_212121"
                android:textSize="@dimen/bj_26dp" />

            <EditText
                android:id="@+id/et_context"
                style="@style/BigBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/bj_5dp"
                android:layout_weight="1"
                android:background="@null"
                android:digits="0123456789."
                android:focusable="true"
                android:hint="0.00"
                android:inputType="number"
                android:maxLength="49"
                android:singleLine="true"
                android:textColor="@color/black_212121"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="@dimen/bj_30dp"
                android:layout_height="@dimen/bj_30dp"
                android:background="?android:selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/delete" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_marginRight="@dimen/bj_13dp"
            android:layout_marginTop="@dimen/bj_14dp"
            android:background="@color/grey_e7e7e7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_marginTop="@dimen/bj_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现有总币: "
                android:textColor="@color/black_858585"
                android:textSize="@dimen/wz_12sp" />

            <TextView
                android:id="@+id/total_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_858585"
                android:textSize="@dimen/wz_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_marginTop="@dimen/bj_8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/bj_19dp"
                android:layout_height="@dimen/bj_19dp"
                android:background="@drawable/hammer" />

            <TextView
                android:id="@+id/exchange_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_5dp"
                android:textColor="@color/black_858585"
                android:textSize="@dimen/wz_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_marginTop="@dimen/bj_15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/red_df443b"
                android:textSize="@dimen/wz_14sp" />

            <TextView
                android:id="@+id/all_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/bj_18dp"
                android:text="全部提现"
                android:textColor="@color/red_df443b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="@dimen/bj_14dp"
                android:layout_marginRight="@dimen/bj_14dp"
                android:background="@drawable/red_bg"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_15sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>