<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flow_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginBottom="@dimen/bj_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_7dp"
        android:orientation="horizontal">

        <com.smg.art.view.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/bj_38dp"
            android:layout_height="@dimen/bj_38dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/draw_def" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/bj_13dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="凝丝思萱"
            android:textColor="#333333"
            android:textSize="@dimen/wz_16sp" />

    </RelativeLayout>

</LinearLayout>