<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/ll_more_draw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.smg.art.view.RoundImageView
            android:id="@+id/iv_draw"
            android:layout_width="@dimen/bj_38dp"
            android:layout_height="@dimen/bj_38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:src="@drawable/draw_def" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_15dp"
            android:layout_toRightOf="@+id/iv_draw"
            android:text="客服2号"
            android:textColor="#333333"
            android:textSize="@dimen/wz_16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:layout_below="@+id/ll_more_draw"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginRight="@dimen/bj_15dp"
        android:layout_marginTop="@dimen/bj_5dp"
        android:background="#e5e5e5" />

</RelativeLayout>
