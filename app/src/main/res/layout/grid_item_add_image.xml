<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/bj_67dp"
    android:layout_height="@dimen/bj_67dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_grid_item_add_image"
        android:layout_width="@dimen/bj_62dp"
        android:layout_height="@dimen/bj_62dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/bj_5dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/del"
        android:layout_width="@dimen/bj_14dp"
        android:layout_height="@dimen/bj_14dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_close_image_red" />

</RelativeLayout>