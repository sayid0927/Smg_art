                android:layout_centerInParent="true"
                android:src="@drawable/draw_def" />

            <TextView
                android:id="@+id/tv_money_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv"
                android:layout_marginTop="@dimen/bj_8dp"
                android:text="@string/moneyDraw"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_jade_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.smg.art.view.RoundImageView
                android:id="@+id/iv_jade_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/draw_def" />

            <TextView
                android:id="@+id/tv_jade_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv"
                android:layout_marginTop="@dimen/bj_8dp"
                android:text="@string/jadeDraw"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_fine_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.smg.art.view.RoundImageView
                android:id="@+id/iv_fine_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/draw_def" />

            <TextView
                android:id="@+id/tv_fine_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv"
                android:layout_marginTop="@dimen/bj_8dp"
                android:text="@string/fineDraw"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_furniture_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
