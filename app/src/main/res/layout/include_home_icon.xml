                android:layout_centerInParent="true"
                android:src="@drawable/draw_def" />

            <TextView
                android:id="@+id/tv_furniture_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv"
                android:layout_marginTop="@dimen/bj_8dp"
                android:text="@string/furnitureDraw"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_more_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.smg.art.view.RoundImageView
                android:id="@+id/iv_more_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/draw_def" />

            <TextView
                android:id="@+id/tv_more_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv"
                android:layout_marginTop="@dimen/bj_8dp"
                android:text="@string/moreDraw"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_12sp" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_under"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bj_24dp"
        android:overScrollMode="never" />


</LinearLayout>
