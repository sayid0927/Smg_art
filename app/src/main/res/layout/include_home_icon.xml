        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_more_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_more_draw"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerInParent="true"
                android:src="@drawable/draw_def" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv"
                android:layout_marginTop="15px"
                android:text="更多"
                android:textColor="@color/white"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:paddingBottom="60px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginTop="47px"
        android:background="@drawable/show_bg"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginLeft="5px"
            android:layout_width="189px"
            android:layout_height="255px"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:layout_marginTop="34px"
            android:background="@drawable/show_bg"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="戴玉堂陶瓷供奉佛阿弥陀佛像"
                android:textColor="@color/black"
                android:textSize="30px"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19px"
                android:text="发行者：欧阳震华"
                android:textColor="@color/black"
                android:textSize="26px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:text="编 码：180601001"
                android:textColor="@color/black"
                android:textSize="26px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="起拍价："
                    android:textColor="@color/black"
                    android:textSize="26px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="￥ 1000"
                    android:textColor="@color/black"
                    android:textSize="26px" />


            </com.zhy.autolayout.AutoLinearLayout>


            <TextView
                android:id="@+id/bt_logistic_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39px"
                android:background="@drawable/btn_order_grey_selector"
                android:text="唐朝藏品"
                android:textSize="22px"
                android:padding="15px"
                android:textColor="@color/black" />


