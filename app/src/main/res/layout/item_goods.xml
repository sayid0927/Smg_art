<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_actioniv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_160dp" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_80dp"
            android:background="@drawable/show_bg">

            <TextView
                android:id="@+id/tv_actionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:layout_marginTop="@dimen/bj_10dp"
                android:text="明代和田白玉满沁镂空浮雕螭龙凤印玺"
                android:textColor="@color/black"
                android:textSize="@dimen/wz_15sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bj_5dp"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:src="@drawable/preview" />


        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
